<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AnkursHostel</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-warning fixed-top">
        @Html.ActionLink("AnkursHostel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand px-4" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link px-2 text-dark" })</li>
                <li class="nav-item">@Html.ActionLink("Features", "Features", "Home", new { @class = "nav-link px-2 text-dark" })</li>
                <li class="nav-item">@Html.ActionLink("Pricing", "Pricing", "Home", new { @class = "nav-link px-2 text-dark" })</li>
                <li class="nav-item">@Html.ActionLink("Contact Us", "Contact", "Home", new { @class = "nav-link px-2 text-dark" })</li>
            </ul>
        </div>
    </nav>

   
    <div>
        @RenderBody()
        <div class="bg-warning">
            <footer class="py-3">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link px-2 text-dark" })</li>
                    <li class="nav-item">@Html.ActionLink("Features", "Features", "Home", new { @class = "nav-link px-2 text-dark" })</li>
                    <li class="nav-item">@Html.ActionLink("Pricing", "Pricing", "Home", new { @class = "nav-link px-2 text-dark" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact Us", "Contact", "Home", new { @class = "nav-link px-2 text-dark" })</li>
                </ul>
                <p class="text-center text-body-secondary">&copy; 2023 AnkursHostel, Inc</p>
            </footer>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>